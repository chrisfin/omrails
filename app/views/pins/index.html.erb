
<div id="pins">

	<% if user_signed_in? %>
		<% if @pins %>
		<div class="well_header">Browse Today's Style Selection</div>


				<%= render @pins %>
		<div class="row">
				<div class="btn_well">
					<div class="btn_well_left">
						<div class="btn_left"> 	
		   					<%= link_to '<i class="icon-white icon-remove"></i> Less'.html_safe, {:controller => "views", 
		                       :action => "create", 
		                       :rank => 0,
		                       :user_id => current_user.id, 
		                       :pin_id => @pins.id
		                       },
		                       :method => "post", class: "btn btn-block btn-danger btn-large"  %>
						</div>

						<div class="counter">
							<%=  @daily_counter %>
						</div>
					</div>
					

					<div class="btn_right"> 	
							<%= link_to '<i class="icon-white icon-heart"></i> Yes!'.html_safe, {:controller => "views", 
		                       :action => "create", 
		                       :rank => 1,
		                       :user_id => current_user.id, 
		                       :pin_id => @pins.id
		                       },
		                       :method => "post", class: "btn btn-block btn-success btn-large" %>
					
					</div>
				</div>
			
		</div>
<!-- Please call pinit.js only once per page -->
<script type="text/javascript" async  data-pin-color="red" data-pin-hover="true" src="//assets.pinterest.com/js/pinit.js"></script>

		<% else %>
			
				<div class="well_header"> 
					<p>Fleur is out of new stuff. Come back tomorrow!  |  
					<%= link_to 'My Catalog', pages_shop_path %> </p>
					<%= link_to image_tag("storefront.jpg"), pages_shop_path %> 
				</div>	
				
		<% end %>
	<% else %>

		<div class="row">
			<div class="well_header">Daily Playlists of Shoppable Fashion | <%= link_to "Sign Up", "#", :onclick => "$('#myModal').modal('show');" %> | <%= link_to "Learn More", about_path %></div>
			
		</div>

		<div class="row">		
  			<div class="center_well">
	   			<div class="well">
   					<%= link_to (image_tag @newpin.image(:large)), @newpin.product_url, :target => "_blank" %>	
    			</div>
     
     			<div class="right_well_header"><%= link_to "My Catalog", pages_shop_path %></div> 

	        		<div class="right_well">
	          			<% @pins_today.each do |pin| %>
	           				<div class="right_well_image"> 
	          					<%= link_to (image_tag pin.image(:thumb)), {:controller => "clicks", 
		                       	:action => "create", 
		                       	:place => "browse",
		                       	:user_id => current_user.id, 
		                       	:pin_id => pin.id
		                       	},
		                       	:method => "post", :target => "_blank" %>
	          			</div>
          			<% end %>                    
        			</div>
				<div class="right_well_footer"> 
      			<%=link_to '<i class="icon-white icon-tag"></i> Shop'.html_safe, pages_shop_path, class: "btn btn-block btn-info btn-medium" %>
     			</div>
       
      		</div>
  		</div>
	
</div>

		<div class="row">

				<div class="btn_well">
					<div class="btn_well_left">
						<div class="btn_left"> 	
	   					<%= link_to '<i class="icon-white icon-remove"></i> Less'.html_safe, "#", :onclick => "$('#myModal').modal('show');", class: "btn btn-block btn-danger btn-large"  %>
	   					<div class="center_small">(Not me... Show me something else.)</div>
						</div>

						<div class="counter">
						20
						</div>	

					</div>
				
					<div class="btn_right"> 	
						<%= link_to '<i class="icon-white icon-heart"></i> Yes!'.html_safe, "#", :onclick => "$('#myModal').modal('show');", class: "btn btn-block btn-success btn-large"  %>
						<div class="center_small">(Love it! Give me more like it.)</div>
					</div>
				</div>
			
		</div>

<!-- /Signup Modal -->
<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Sign Up: You're seconds away from browsing!</h4>
      </div>
      <div class="modal-body">
       <%= render "devise/registrations/new" %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

	<% end %>




