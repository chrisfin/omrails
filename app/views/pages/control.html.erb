<% if user_signed_in? %>

	<% if current_user.try(:admin?) %>
  		<div class="well_header">Hello <%= current_user.name %>, you are a Fleur Admin</div>
  		<p> <%=link_to "Manage Uploaded Images", allpins_path %> | Pins Uploaded: <%= @pins.count %> </p>
  		<p> Total Users: <%= @users.count %></p>
  		<p> <%=link_to "Show Views" %> | Items Viewed: <%= @views.count %> | Views / User: <%= @views.count / @users.count %></p>

			<h3>Users</h3>

			<table class="manage_table">
			<tr>
				<td>ID </td>
				<td>NAME </td>
				<td>SEX </td>
				<td>Created</td>
			</tr>
			
				<% @users.each do |user| %>
		  		<tr>
						<td><%= user.id %> </td>
						<td><%= user.name %> </td>
						<td><%= user.sex %> </td>
						<td><%= user.created_at.to_formatted_s(:short)    %> </td>
					</tr>
				<% end %>
				</table>

	<% else %>
		<b>Make current user a Fleur Admin</b>
				
		<%= form_tag pages_authenticate_path do %>
  	<label>Enter Password</label>
  	<%= password_field_tag :adminpass %>
 		<%= submit_tag "Submit" %>
		<% end %>

	<% end %>

<% else %>

	<div class="hero-unit"> 
		<div class="well_header">Must be signed in to access admin panel.</div>
	</div>

<% end %>